<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@android:color/transparent"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:id="@+id/verseCardView">

    <TextView
        android:id="@+id/newVerse"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/mainSecond"
        android:fontFamily="@font/amiri_regular"
        android:gravity="center"
        android:padding="10dp"
        android:text="فماذا ينتفع الانسان اذا ربح العالم كله وخسر نفسه"
        android:textColor="?attr/mainWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

</androidx.cardview.widget.CardView>